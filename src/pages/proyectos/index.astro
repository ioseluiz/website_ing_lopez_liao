---
import Layout from "../../layouts/Layout.astro";
import { Image } from "astro:assets";
import { projects } from "../../data/projects";
---

<Layout
  title="Proyectos - Ingeniería López Liao S.A."
  description="Explore nuestro portafolio de proyectos completados, un testimonio de nuestra calidad, eficiencia y compromiso."
>
  <header class="bg-primary-dark text-white py-20">
    <div class="container mx-auto px-6 text-center">
      <h1 class="text-4xl font-bold">Nuestro Portafolio de Proyectos</h1>
      <p class="mt-2 text-lg text-gray-300">
        Obras que reflejan nuestra capacidad y experiencia.
      </p>
    </div>
  </header>

  <section class="py-20 bg-background-light">
    <div class="container mx-auto px-6">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          projects.map((project) => (
            <a
              href={`/proyectos/${project.slug}`}
              class="block bg-white rounded-lg shadow-lg overflow-hidden transform hover:-translate-y-2 transition-transform duration-300 group"
            >
              <Image
                src={project.img}
                alt={`Imagen del proyecto ${project.name}`}
                class="w-full h-56 object-cover"
                width={600}
                height={400}
                format="webp"
              />
              <div class="p-6">
                <p class="text-sm text-text-secondary">{project.year}</p>
                <h3 class="text-xl font-bold text-primary-dark mt-1 mb-2 group-hover:text-primary transition-colors">
                  {project.name}
                </h3>
                <p class="text-text-secondary">
                  <strong>Cliente:</strong> {project.client}
                </p>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </section>
</Layout>
