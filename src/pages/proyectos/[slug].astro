---
import { Image } from "astro:assets";
import Layout from "../../layouts/Layout.astro";
import { projects } from "../../data/projects";

export function getStaticPaths() {
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
---

<Layout
  title={`${project.name} - Proyectos`}
  description={`Detalles del proyecto ${project.name}, ejecutado por Ingeniería López Liao S.A.`}
>
  <header class="bg-primary-dark text-white py-20">
    <div class="container mx-auto px-6 text-center">
      <h1 class="text-4xl font-bold">{project.name}</h1>
      <p class="mt-2 text-lg text-gray-300">Cliente: {project.client}</p>
    </div>
  </header>

  <div class="container mx-auto px-6 py-20">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
      <!-- Columna de Detalles -->
      <div class="lg:col-span-1">
        <div class="bg-background-light p-8 rounded-lg shadow-md sticky top-28">
          <h2 class="text-2xl font-bold text-primary-dark mb-6">
            Detalles del Proyecto
          </h2>
          <div class="space-y-4">
            <div>
              <h3 class="font-semibold text-text-primary">Cliente</h3>
              <p class="text-text-secondary">{project.client}</p>
            </div>
            <div>
              <h3 class="font-semibold text-text-primary">Año</h3>
              <p class="text-text-secondary">{project.year}</p>
            </div>
            <div>
              <h3 class="font-semibold text-text-primary">
                Área de Construcción
              </h3>
              <p class="text-text-secondary">{project.area}</p>
            </div>
            <div>
              <h3 class="font-semibold text-text-primary">Descripción</h3>
              <p class="text-text-secondary">{project.description}</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Columna de Galería -->
      <div class="lg:col-span-2">
        <h2 class="text-3xl font-bold text-primary-dark mb-8">
          Galería del Proyecto
        </h2>
        <div class="space-y-8">
          <Image
            src={project.img}
            alt={`Imagen principal de ${project.name}`}
            class="w-full h-auto rounded-lg shadow-lg"
            width={1200}
            height={800}
            format="webp"
          />
          {
            project.gallery.length > 0 && (
              <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                {project.gallery.map((imgSrc, index) => (
                  <img
                    src={imgSrc}
                    alt={`Foto ${index + 1} de ${project.name}`}
                    class="w-full h-auto rounded-lg shadow-md"
                  />
                ))}
              </div>
            )
          }
        </div>
        <div class="mt-12">
          <a href="/proyectos" class="text-accent font-semibold hover:underline"
            >← Volver a todos los proyectos</a
          >
        </div>
      </div>
    </div>
  </div>
</Layout>
